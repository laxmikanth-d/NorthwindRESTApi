# This file goes to /etc/systemd/system/

[Unit]
Description=uWSGI NorthwindRESTApi

[Service]
Environment=DATABASE_URL=postgres://lax:paS$123word@localhost:5432/northwind
ExecStart=/var/www/html/NorthwindRESTApi/venv/bin/uwsgi --master  --emperor /var/www/html/NorthwindRESTApi/uwsgi.ini --die-on-term --uid lax --gid lax --logto /var/www/html/NorthwindRESTApi/log/emperor.log
Restart=always
KillSignal=SIGQUIT
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
